<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">25dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.Style1</item>
    </style>

    <style name="Animation.Activity.Style1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/base_slide_right_in1</item>
        <item name="android:activityOpenExitAnimation">@anim/base_stay_orig1</item>
        <item name="android:activityCloseEnterAnimation">@anim/base_stay_orig1</item>
        <item name="android:activityCloseExitAnimation">@anim/base_slide_right_out1</item>
        <item name="android:taskOpenEnterAnimation">@anim/base_slide_right_in1</item>
        <item name="android:taskOpenExitAnimation">@anim/base_stay_orig1</item>
        <item name="android:taskCloseEnterAnimation">@anim/base_stay_orig1</item>
        <item name="android:taskCloseExitAnimation">@anim/base_slide_right_out1</item>
        <item name="android:taskToFrontEnterAnimation">@anim/base_slide_right_in1</item>
        <item name="android:taskToFrontExitAnimation">@anim/base_stay_orig1</item>
        <item name="android:taskToBackEnterAnimation">@anim/base_stay_orig1</item>
        <item name="android:taskToBackExitAnimation">@anim/base_slide_right_out1</item>
    </style>

    <style name="dialog_user" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/custom_dialog_transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@mipmap/firstpage</item>
    </style>

</resources>
